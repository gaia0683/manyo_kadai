<h1>ユーザー一覧</h1>

<% notice %>

<table>
  <tr>
    <th>名前</th>
    <th>メールアドレス</th>
    <th>作成したタスクの数</th>
    <th>ユーザーの種類</th>
  </tr>


  <% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= user.tasks.count %></td>
    <% if user.admin_user == true %>
      <td>管理者</td>
    <% else %>
      <td>一般ユーザー</td>
    <% end %>
    <td><%= link_to 'ユーザーの詳細を見る', admin_user_path(user.id) %></td>
    <td><%= link_to 'ユーザーを編集する', edit_admin_user_path(user.id) %></td>
    <td><%= link_to 'ユーザーを削除する', admin_user_path(user.id), method: :delete %></td>
  </tr>
<% end %>
</table>


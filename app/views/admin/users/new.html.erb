<h1>管理者ユーザーを作成</h1>

<% if @user.errors.any? %>
    <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count,"error")%>prohibited this<%= @user.name %>from being saved:</h2>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @user,url:admin_users_path, local:true) do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %>

  <%= form.label :email %>
  <%= form.email_field :email %>

  <%= form.label :password %>
  <%= form.password_field :password %>

  <%= form.label :password_confirmation %>
  <%= form.password_field :password_confirmation %>

  <%= form.label :admin_user %>
  <%= form.check_box :admin_user %>

  <%= form.submit '自分のアカウントを新規登録する' %>
<% end %>

<%= link_to 'ユーザー一覧に戻る', admin_users_path %>
